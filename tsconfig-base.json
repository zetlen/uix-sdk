{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveWatchOutput": true,
    "target": "ES2019",
    "sourceMap": true
  }
}
